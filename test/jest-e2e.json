{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@action/novaswap/(.*)": "<rootDir>/../libs/novaswap/src/$1",
    "@action/novaswap": "<rootDir>/../libs/novaswap/src",
    "@action/utils/(.*)": "<rootDir>/../libs/utils/src/$1",
    "@action/utils": "<rootDir>/../libs/utils/src",
    "@action/buy-me-a-coffee/(.*)": "<rootDir>/../libs/buy-me-a-coffee/src/$1",
    "@action/buy-me-a-coffee": "<rootDir>/../libs/buy-me-a-coffee/src",
    "@action/red-envelope/(.*)": "<rootDir>/../libs/red-envelope/src/$1",
    "@action/red-envelope": "<rootDir>/../libs/red-envelope/src"
  }
}
